<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemNotesMainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemNotesCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemNotesContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_view_border_selector"
            android:padding="16dp">

            <ImageView
                android:id="@+id/itemNotesPriorityIndicatorImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:src="@drawable/ic_note_priority_indicator_white_8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/itemNotesTitleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/itemNotesTitleTextView"
                tools:ignore="ContentDescription,RtlSymmetry"
                tools:tint="@color/amber"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/itemNotesTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/AppTheme.TextAppearance.Subtitle1"
                android:textColor="@color/text_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/itemNotesPriorityIndicatorImageView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Lorem ipsum dolor sit amet" />

            <TextView
                android:id="@+id/itemNotesTextTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textAppearance="@style/AppTheme.TextAppearance.Body1"
                android:textColor="@color/text_secondary"
                app:layout_constraintTop_toBottomOf="@id/itemNotesTitleTextView"
                tools:text="Lorem ipsum dolor sit amet, cu magna animal recteque vim." />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>