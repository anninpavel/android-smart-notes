<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="elevation">0dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.TextAppearance.Headline6</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="contentInsetEnd">16dp</item>
        <item name="contentInsetStartWithNavigation">72dp</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="AppTheme.BottomAppBar" parent="@style/Widget.MaterialComponents.BottomAppBar">
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="AppTheme.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="AppTheme.TextAppearance" />

    <style name="AppTheme.TextAppearance.Headline1">
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline2">
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline3">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>